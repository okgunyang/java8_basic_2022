package sec5;

class A {}
class B extends A { }
class C extends A { }

class D extends B { }
class E extends B { }
class F extends C { }
public class PromotionEx {
	public static void main(String[] args) {
		//B b = new B();  //- 객체 선언 및 생성
		B b = (B) new A(); //- 객체 강제 형변환하여 생성은 가능하나 멤버는 자식 클래스에서 더 추가해도 활용할 수 없음
		//B b = new D();
		//B b = new E(); 
		method(new E());
	}
	static void method(B b) { } 
}
